<div class="container mt-3">
  <div class="row">
    <div class="col-sm-8 offset-sm-2">
      <%= link_to "Create Article", new_article_path(@article), class: 'btn btn-primary' %>
      <article class="mb-3">
        <% @articles.each do |article| %>
        <h2 id="article-link" class="mt-4">
        <%= link_to article.title, article_path(article) %>
          <%# <a href="/articles/50714">Phased background moderator</a> %>
        </h2>
        <%= article.content %>
        <% end %>
      </article>
    </div>
  </div>
</div>
